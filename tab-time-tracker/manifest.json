{
  "manifest_version": 3,
  "name": "Tab Time Tracker",
  "version": "1.0",
  "description": "Track how much time you spend on each site.",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"]
}
